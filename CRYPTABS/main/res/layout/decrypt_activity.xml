<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            app:fontFamily="@font/montserrat_alternates_bold"
            android:gravity="center_horizontal" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Decrypt"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btncode"
            android:layout_marginTop="200dp"
            android:text="Decrypt"

            />


        <EditText
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/textBottom"
            android:textSize="20dp"
            android:background="@color/act2"
            android:hint="INSERT YOUR MESSAGE"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/kee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/textBottom"
            android:textSize="20dp"
            android:background="@color/act2"
            android:inputType="number"
            android:hint="INSERT YOUR KEY"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/view"
            android:layout_width="14dp"
            android:layout_height="195dp"
            android:textAlignment="center"
            android:textColor="@color/textBottom"
            android:textSize="20dp"
            android:gravity="center_horizontal" />




    </LinearLayout>

</RelativeLayout>