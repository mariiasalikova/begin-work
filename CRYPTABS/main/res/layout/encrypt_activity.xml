<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="GO BACK"
        android:background="@drawable/btncode"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:text="SHOW"
        android:background="@drawable/btncode"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btncode"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            app:fontFamily="@font/montserrat_alternates_bold"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btncode"
        android:layout_marginTop="200dp"
        android:text="OPEN TAB EDITOR" />

    <ScrollView
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
            android:id="@+id/outp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/textBottom"
            android:textAlignment="center"
            />



        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="322dp"
        android:layout_marginLeft="322dp"
        android:layout_marginTop="298dp"
        android:background="@drawable/btncode"
        android:text="COPY"
        android:textColor="@android:color/white" />

</RelativeLayout>